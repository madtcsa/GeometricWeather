<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- app theme -->
    <style name="GeometricWeather" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- card. -->
    <style name="material_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/touch_raise</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="dialog_card" parent="material_card">
        <item name="android:layout_marginTop">@dimen/dialog_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dialog_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/dialog_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dialog_margin_vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- image. -->
    <style name="material_icon">
        <item name="android:layout_width">@dimen/material_icon_size</item>
        <item name="android:layout_height">@dimen/material_icon_size</item>
        <item name="android:layout_marginTop">@dimen/card_info_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_info_margin</item>
        <item name="android:layout_marginRight">@dimen/card_info_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_info_margin</item>
    </style>

    <style name="week_weather_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- text. -->
    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="info_icon">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="notification_big_view_week_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/weather_cloudy</item>
    </style>

    <style name="weather_fragment_weather_icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">@dimen/weather_icon_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="widget_background_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/widget_card</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="widget_week_icon">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:src">@drawable/weather_cloudy</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- spinner -->
    <style name="spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- switch -->
    <style name="my_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/colorAccent</item>
    </style>

    <!-- button -->
    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="activity_create_widget_done_button" parent="material_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">@string/done</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <!-- text -->
    <style name="activity_about_mini_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="activity_about_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="activity_create_widget_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="share_week_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextLight2nd</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!-- clock -->
    <style name="widget_text_clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:format24Hour">HH:mm</item>
        <item name="android:format12Hour">hh:mm</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/flag_icon_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:shadowColor">@color/colorTextGrey</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <!-- view. -->
    <style name="week_weather_week_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
